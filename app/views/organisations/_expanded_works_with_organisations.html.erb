<a href="#" class="govuk-link organisation-list__works-with-toggle" data-controls="toggle_<%= current_organisation.parameterize %>" data-expanded="false" data-toggled-text="<%= t('organisations.view_less') %>">
  <%= t('organisations.view_all') %>
</a>

<div class="organisation-list__works-with js-hidden" id="toggle_<%= current_organisation.parameterize %>">
  <% works_with_organisations.each do |type, work_with_organisations| %>
    <%= render "govuk_publishing_components/components/heading", {
      font_size: "s",
      heading_level: 4,
      text: t('organisations.type.' + type),
    } %>
    <%= render "govuk_publishing_components/components/list", {
      items: work_with_organisations.map { | work_with_organisation |
        link_to(work_with_organisation["title"], work_with_organisation["href"], class: "govuk-link govuk-body-s")
      },
    } %>
  <% end %>
</div>
