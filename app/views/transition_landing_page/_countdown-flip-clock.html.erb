    <div class="landing-page__countdown-number">
      <%= clock.days_left.first %>
    </div>
  </div>
  <div class="landing-page__countdown-number-wrapper">
    <div class="landing-page__countdown-number">
      <%= clock.days_left.last %>
    </div>
  </div>
  <p class="govuk-body landing-page__countdown-text"><%= clock.days_text %></p>
</div>
